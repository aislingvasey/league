	<name>league</name>

	<properties>
		<javamail.version>1.4</javamail.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.14.1</version>
				<configuration>
					<disableXmlReport>false</disableXmlReport>
					<excludes>
						<exclude>**/InfobloxDhcpDnsServiceTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!-- Test database To generate the test database, run: "mvn clean compile" and then "mvn -P test hibernate3:hbm2ddl" To run script 
		into another db: psql -U league -d league -f ./target/hibernate3/sql/database_schema.sql -->
	<profiles>
		<profile>
			<id>test</id>
			<build>
				<plugins>
					<plugin>
						<executions>
							<execution>
								<goals>
									<goal>hbm2ddl</goal>
								</goals>
							</execution>
						</executions>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>hibernate3-maven-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<components>
								<component>
									<name>hbm2ddl</name>
									<implementation>annotationconfiguration</implementation>
								</component>
							</components>
							<componentProperties>
								<export>true</export>
								<update>false</update>
								<drop>true</drop>
								<create>true</create>
								<format>true</format>
								<scan-classes>true</scan-classes>
								<outputfilename>database_schema.sql</outputfilename>
								<propertyfile>hibernate-test-gen.properties</propertyfile>
							</componentProperties>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>postgresql</groupId>
								<artifactId>postgresql</artifactId>
								<version>9.2-1002.jdbc4</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- Code Coverage: Using a profile keeps everything separate from the main build. Run the following command and then view the 
			coverage file in yr browser: mvn -P coverage clean emma:clean emma:emma -->
		<profile>
			<id>coverage</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<inherited>true</inherited>
						<configuration>
							<forkMode>once</forkMode>
							<reportFormat>xml</reportFormat>
							<classesDirectory>${project.build.directory}/generated-classes/emma/classes</classesDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<reporting>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>emma-maven-plugin</artifactId>
						<inherited>true</inherited>
						<configuration>
							<filters>
								<filter>-**.xml1.**</filter>
							</filters>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>surefire-report-maven-plugin</artifactId>
						<inherited>true</inherited>
					</plugin>
				</plugins>
			</reporting>

		</profile>

	</profiles>

